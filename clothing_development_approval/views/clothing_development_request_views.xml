<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- 服装开发申请表单视图 -->
        <record id="view_clothing_development_request_form" model="ir.ui.view">
            <field name="name">clothing.development.request.form</field>
            <field name="model">clothing.development.request</field>
            <field name="arch" type="xml">
                <form string="服装开发申请">
                    <header>
                        <!-- 状态栏 -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,in_development,completed,cancelled"/>
                    </header>
                    <sheet>
                        <!-- 顶部按钮区域 -->
                        <div class="oe_button_box" name="button_box">
                            <!-- 可以在这里添加智能按钮 -->
                        </div>
                        
                        <!-- 主要信息区域 -->
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                            <h2>
                                <field name="title" placeholder="请输入申请标题..."/>
                            </h2>
                        </div>
                        
                        <group>
                            <group name="basic_info" string="基本信息">
                                <field name="clothing_type"/>
                                <field name="target_season"/>
                                <field name="target_gender"/>
                                <field name="priority"/>
                                <field name="applicant_id"/>
                                <field name="department_id"/>
                            </group>
                            <group name="schedule_info" string="时间安排">
                                <field name="expected_start_date"/>
                                <field name="expected_completion_date"/>
                                <field name="actual_completion_date" invisible="state not in ['completed']"/>
                                <field name="duration_days" invisible="state in ['completed', 'cancelled']"/>
                            </group>
                        </group>
                        
                        <group>
                            <group name="budget_info" string="预算信息">
                                <field name="estimated_cost"/>
                                <field name="actual_cost" invisible="state not in ['in_development', 'completed']"/>
                                <field name="cost_variance" invisible="state not in ['in_development', 'completed']"/>
                            </group>
                            <group name="approval_info" string="审批信息">
                                <field name="approver_id" invisible="state in ['draft']"/>
                                <field name="approval_date" invisible="state in ['draft', 'submitted']"/>
                            </group>
                        </group>
                        
                        <notebook>
                            <page string="详细描述" name="description">
                                <group>
                                    <field name="description" nolabel="1" placeholder="请详细描述服装开发需求..."/>
                                </group>
                            </page>
                            <page string="设计要求" name="design_requirements">
                                <group>
                                    <field name="design_requirements" nolabel="1" placeholder="请描述具体的设计要求和规格..."/>
                                </group>
                            </page>
                            <page string="备注" name="notes">
                                <group>
                                    <field name="notes" nolabel="1" placeholder="其他备注信息..."/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                    
                </form>
            </field>
        </record>
        
        <!-- 服装开发申请列表视图 -->
        <record id="view_clothing_development_request_tree" model="ir.ui.view">
            <field name="name">clothing.development.request.tree</field>
            <field name="model">clothing.development.request</field>
            <field name="arch" type="xml">
                <list string="服装开发申请" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='approved'" decoration-primary="state=='in_development'" decoration-muted="state=='cancelled'">
                    <field name="name"/>
                    <field name="clothing_type"/>
                    <field name="target_season"/>
                    <field name="applicant_id"/>
                    <field name="department_id"/>
                    <field name="expected_start_date"/>
                    <field name="expected_completion_date"/>
                    <field name="priority"/>
                    <field name="estimated_cost" sum="总预算"/>
                    <field name="state" widget="badge" decoration-info="state=='draft'" decoration-warning="state=='submitted'" decoration-success="state=='approved'" decoration-primary="state=='in_development'" decoration-muted="state=='cancelled'"/>
                </list>
            </field>
        </record>
        
        <!-- 服装开发申请搜索视图 -->
        <record id="view_clothing_development_request_search" model="ir.ui.view">
            <field name="name">clothing.development.request.search</field>
            <field name="model">clothing.development.request</field>
            <field name="arch" type="xml">
                <search string="搜索服装开发申请">
                    <!-- 搜索字段 -->
                    <field name="name" string="申请编号" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="clothing_type" string="服装类型"/>
                    <field name="applicant_id" string="申请人"/>
                    <field name="department_id" string="部门"/>
                    <field name="target_season" string="目标季节"/>
                    
                    <!-- 过滤器 -->
                    <filter string="我的申请" name="my_requests" domain="[('applicant_id', '=', uid)]"/>
                    <filter string="待审批" name="pending_approval" domain="[('state', '=', 'submitted')]"/>
                    <filter string="已审批" name="approved" domain="[('state', '=', 'approved')]"/>
                    <filter string="开发中" name="in_development" domain="[('state', '=', 'in_development')]"/>
                    <filter string="已完成" name="completed" domain="[('state', '=', 'completed')]"/>
                    <filter string="已取消" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                    
                    <separator/>
                    <filter string="高优先级" name="high_priority" domain="[('priority', '=', 'high')]"/>
                    <filter string="中优先级" name="medium_priority" domain="[('priority', '=', 'medium')]"/>
                    <filter string="低优先级" name="low_priority" domain="[('priority', '=', 'low')]"/>
                    
                    <separator/>
                    <filter string="本月申请" name="this_month" domain="[('expected_start_date', '>=', (context_today() - relativedelta(day=1)).strftime('%Y-%m-%d')), ('expected_start_date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                    <filter string="逾期项目" name="overdue" domain="[('expected_completion_date', '&lt;', context_today()), ('state', 'not in', ['completed', 'cancelled'])]"/>
                    
                    <!-- 分组 -->
                    <group expand="0" string="分组">
                        <filter string="状态" name="group_by_state" context="{'group_by': 'state'}"/>
                        <filter string="服装类型" name="group_by_clothing_type" context="{'group_by': 'clothing_type'}"/>
                        <filter string="季节" name="group_by_season" context="{'group_by': 'target_season'}"/>
                        <filter string="申请人" name="group_by_applicant" context="{'group_by': 'applicant_id'}"/>
                        <filter string="部门" name="group_by_department" context="{'group_by': 'department_id'}"/>
                        <filter string="优先级" name="group_by_priority" context="{'group_by': 'priority'}"/>
                        <filter string="开始月份" name="group_by_month" context="{'group_by': 'expected_start_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>
        
        <!-- 动作定义 -->
        <record id="action_clothing_development_request" model="ir.actions.act_window">
            <field name="name">服装开发申请</field>
            <field name="res_model">clothing.development.request</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    创建第一个服装开发申请
                </p>
                <p>
                    服装开发申请用于管理从设计到生产的整个开发流程。
                    您可以跟踪申请状态、预算、时间安排等关键信息。
                </p>
            </field>
        </record>
        
        <!-- 菜单定义 -->
        <menuitem id="menu_clothing_development_root" name="服装开发" sequence="10"/>
        <menuitem id="menu_clothing_development_request" name="开发申请" parent="menu_clothing_development_root" action="action_clothing_development_request" sequence="10"/>
        
    </data>
</odoo>